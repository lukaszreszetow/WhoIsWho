<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity"
    android:background="@drawable/background"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/login_register_editTexts"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_margin="16dp">
        <EditText
            android:id="@+id/email_edittext"
            android:layout_margin="8dp"
            android:gravity="center"
            android:hint="@string/editText_email_hint"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/haslo_editText"
            android:hint="@string/editText_haslo_hint"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_register_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@+id/login_register_editTexts"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:paddingBottom="@dimen/button_padding"
        android:paddingTop="@dimen/button_padding"
        android:foregroundGravity="center"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:layout_margin="16dp"
        fancy:fb_defaultColor="@color/colorPrimary"
        fancy:fb_focusColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:elevation="@dimen/button_elevation"
        fancy:fb_borderWidth="2dp"
        fancy:fb_borderColor="@color/white"
        fancy:fb_textSize="20sp"
        fancy:fb_text="@string/button_login"
        fancy:fb_radius="45dp"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:paddingBottom="@dimen/button_padding"
        android:paddingTop="@dimen/button_padding"
        android:foregroundGravity="center"
        android:layout_below="@+id/login_button"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:layout_margin="16dp"
        fancy:fb_defaultColor="@color/colorPrimary"
        fancy:fb_focusColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:elevation="@dimen/button_elevation"
        fancy:fb_borderWidth="2dp"
        fancy:fb_borderColor="@color/white"
        fancy:fb_textSize="20sp"
        fancy:fb_text="@string/button_register"
        fancy:fb_radius="45dp" />

    </LinearLayout>

</RelativeLayout>
